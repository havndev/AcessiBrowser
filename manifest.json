{
  "manifest_version": 3,
  "name": "AcessiBrowser",
  "description":"Extensa√µ que perrmite mudar tipo de fonte e tamanho da mesma no browser.",
  "version": "1.0",

  "permissions": ["scripting","activeTab","storage","tabs"],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"] 
    }
  ]
}
